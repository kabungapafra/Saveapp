<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl">

        <ImageView
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:src="@drawable/ic_people"
            android:tint="@color/deep_blue"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Group"
            android:textSize="@dimen/text_size_xxl"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's set up your savings group"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_xxl" />

        <!-- Group Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group Name"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/deep_blue"
            app:boxCornerRadiusTopStart="@dimen/corner_radius_medium"
            app:boxCornerRadiusTopEnd="@dimen/corner_radius_medium"
            app:boxCornerRadiusBottomStart="@dimen/corner_radius_medium"
            app:boxCornerRadiusBottomEnd="@dimen/corner_radius_medium"
            app:startIconDrawable="@drawable/ic_people"
            app:startIconTint="@color/deep_blue"
            android:layout_marginBottom="@dimen/spacing_normal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Group Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group Description (Optional)"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/deep_blue"
            app:boxCornerRadiusTopStart="@dimen/corner_radius_medium"
            app:boxCornerRadiusTopEnd="@dimen/corner_radius_medium"
            app:boxCornerRadiusBottomStart="@dimen/corner_radius_medium"
            app:boxCornerRadiusBottomEnd="@dimen/corner_radius_medium"
            app:startIconDrawable="@drawable/ic_info"
            app:startIconTint="@color/deep_blue"
            app:counterEnabled="true"
            app:counterMaxLength="200"
            android:layout_marginBottom="@dimen/spacing_normal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGroupDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:maxLength="200"
                android:gravity="top|start" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light_purple_bg"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_normal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info"
                    android:tint="@color/deep_blue"
                    android:layout_marginEnd="@dimen/spacing_small" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Choose a name that represents your group's purpose and makes it easy for members to identify."
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
