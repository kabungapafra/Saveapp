<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#3F51B5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:text="Forgot Password"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backButton" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/otpSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            android:text="Enter your email address to receive a password reset code"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailTitle" />

        <!-- Email Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Email Address"
            app:boxStrokeColor="#3F51B5"
            app:hintTextColor="#3F51B5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otpSubtitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email/Phone Display (hidden initially, shown after email is entered) -->
        <TextView
            android:id="@+id/sentToText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Code sent to: admin@example.com"
            android:textColor="#3F51B5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailInputLayout" />

        <!-- OTP Input Container (hidden initially, shown after sending OTP) -->
        <LinearLayout
            android:id="@+id/otpInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sentToText">

            <!-- OTP Digit 1 -->
            <EditText
                android:id="@+id/otpDigit1"
                android:layout_width="50dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/otp_input_bg"
                android:gravity="center"
                android:hint="-"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textColorHint="#CCCCCC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- OTP Digit 2 -->
            <EditText
                android:id="@+id/otpDigit2"
                android:layout_width="50dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/otp_input_bg"
                android:gravity="center"
                android:hint="-"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textColorHint="#CCCCCC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- OTP Digit 3 -->
            <EditText
                android:id="@+id/otpDigit3"
                android:layout_width="50dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/otp_input_bg"
                android:gravity="center"
                android:hint="-"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textColorHint="#CCCCCC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- OTP Digit 4 -->
            <EditText
                android:id="@+id/otpDigit4"
                android:layout_width="50dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/otp_input_bg"
                android:gravity="center"
                android:hint="-"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textColorHint="#CCCCCC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- OTP Digit 5 -->
            <EditText
                android:id="@+id/otpDigit5"
                android:layout_width="50dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/otp_input_bg"
                android:gravity="center"
                android:hint="-"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textColorHint="#CCCCCC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- OTP Digit 6 -->
            <EditText
                android:id="@+id/otpDigit6"
                android:layout_width="50dp"
                android:layout_height="64dp"
                android:background="@drawable/otp_input_bg"
                android:gravity="center"
                android:hint="-"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textColorHint="#CCCCCC"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Timer/Resend Container (hidden initially) -->
        <LinearLayout
            android:id="@+id/resendContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otpInputContainer">

            <TextView
                android:id="@+id/resendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive code? "
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/resendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:text="Resend"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="(0:30)"
                android:textColor="#999999"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Error Message -->
        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Invalid OTP. Please try again."
            android:textColor="#F44336"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resendContainer" />

        <!-- Send OTP / Verify Button -->
        <Button
            android:id="@+id/verifyButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_primary"
            android:elevation="2dp"
            android:text="Send Code"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errorMessage" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:indeterminateTint="#3F51B5"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/verifyButton" />

        <!-- Help Text -->
        <TextView
            android:id="@+id/helpText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:padding="8dp"
            android:text="@string/having_trouble_contact_support"
            android:textColor="#999999"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loadingIndicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>