<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Transaction Task"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/deep_blue"
        android:layout_marginBottom="24dp"/>

    <!-- Task Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. Monthly Contribution"
        android:padding="12dp"
        android:background="@drawable/otp_input_bg"
        android:layout_marginBottom="16dp"/>

    <!-- Member Selection (Receiver) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receiver (Member)"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <Spinner
        android:id="@+id/spinnerMembers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/otp_input_bg"
        android:layout_marginBottom="16dp"/>

    <!-- Amount -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount (UGX)"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:background="@drawable/otp_input_bg"
        android:layout_marginBottom="16dp"/>

    <!-- Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. 10:00 AM"
        android:padding="12dp"
        android:background="@drawable/otp_input_bg"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnSaveTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Task"
        android:backgroundTint="@color/deep_blue"
        android:textColor="@color/white"
        android:padding="12dp"/>

</LinearLayout>
