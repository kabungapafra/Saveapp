<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xl"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_transaction_task"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/deep_blue"
        android:layout_marginBottom="@dimen/spacing_xl"/>

    <!-- Task Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_title"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_xs"
        android:layout_marginBottom="@dimen/spacing_xs"/>

    <EditText
        android:id="@+id/etTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. Monthly Contribution"
        android:padding="12dp"
        android:background="@drawable/otp_input_bg"
        android:layout_marginBottom="16dp"/>

    <!-- Member Selection (Receiver) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/receiver_member"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_xs"
        android:layout_marginBottom="@dimen/spacing_xs"/>

    <Spinner
        android:id="@+id/spinnerMembers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/otp_input_bg"
        android:layout_marginBottom="@dimen/spacing_normal"/>

    <!-- Amount -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount_ugx"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_xs"
        android:layout_marginBottom="@dimen/spacing_xs"/>

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:background="@drawable/otp_input_bg"
        android:layout_marginBottom="16dp"/>

    <!-- Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_xs"
        android:layout_marginBottom="@dimen/spacing_xs"/>

    <EditText
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. 10:00 AM"
        android:padding="@dimen/spacing_medium"
        android:background="@drawable/otp_input_bg"
        android:layout_marginBottom="@dimen/spacing_xl"/>

    <Button
        android:id="@+id/btnSaveTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_task"
        android:backgroundTint="@color/deep_blue"
        android:textColor="@color/white"
        android:padding="@dimen/spacing_medium"/>

</LinearLayout>
