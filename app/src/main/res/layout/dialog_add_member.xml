<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Create Member Account"
            android:textColor="@color/deep_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Full Name"
            android:textColor="@color/deep_blue"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etMemberName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/otp_input_bg"
            android:hint="e.g. John Doe"
            android:inputType="textPersonName"
            android:paddingHorizontal="12dp"
            android:textColor="@color/deep_blue"
            android:textSize="16sp" />

        <!-- Phone Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Phone Number"
            android:textColor="@color/deep_blue"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etMemberPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/otp_input_bg"
            android:hint="e.g. 0770000000"
            android:inputType="phone"
            android:paddingHorizontal="12dp"
            android:textColor="@color/deep_blue"
            android:textSize="16sp" />

        <!-- Email Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Email Address"
            android:textColor="@color/deep_blue"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etMemberEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/otp_input_bg"
            android:hint="e.g. john@example.com"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="12dp"
            android:textColor="@color/deep_blue"
            android:textSize="16sp" />

        <!-- Initial OTP/Password Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="One-Time Access Code (OTP)"
            android:textColor="@color/deep_blue"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etMemberOTP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/otp_input_bg"
            android:hint="Set temporary code"
            android:inputType="number"
            android:paddingHorizontal="12dp"
            android:textColor="@color/deep_blue"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member will use this OTP to login for the first time and change their password."
            android:textColor="#3F51B5"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
