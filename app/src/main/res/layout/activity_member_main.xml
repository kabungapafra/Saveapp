<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/greetingContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello,"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/greetingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member!"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvGroupId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: GRP-000000"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Members Icon -->
        <FrameLayout
            android:id="@+id/btnHeaderMembers"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_white"
            android:padding="12dp"
            android:layout_marginEnd="12dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_people"
                app:tint="@color/black" />
        </FrameLayout>

        <!-- Notification Icon -->
        <FrameLayout
            android:id="@+id/btnMemberNotifications"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_white"
            android:padding="12dp">
            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_notifications"
                app:tint="@color/black" />
            <!-- Numerical Badge -->
            <TextView
                android:id="@+id/notificationBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_red"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

    <!-- Content Scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- Balance Cards (Green Card) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/balanceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_gradient_background"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Group Savings"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"
                            android:letterSpacing="0.05"
                            android:fontFamily="sans-serif-medium"/>

                        <ImageView
                            android:id="@+id/balanceMenuIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_more_vert"
                            app:tint="@color/white"
                            android:alpha="0.8"/>
                    </LinearLayout>

                    <!-- Big Balance Value -->
                    <TextView
                        android:id="@+id/txtBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UGX 1,500,000"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="sans-serif-medium"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#33FFFFFF"
                        android:layout_marginBottom="20dp"/>

                    <!-- Secondary Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- My Contributions (With Progress Circle) -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="start">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Stash"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/savingsBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UGX 350,000"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"/>
                            
                            <!-- Progress Info -->
                             <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                
                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/metricsProgress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:indicatorSize="24dp"
                                    app:trackThickness="3dp"
                                    app:trackColor="#33FFFFFF"
                                    app:indicatorColor="@color/white"
                                    android:progress="50"
                                    android:layout_marginEnd="8dp"/>
                                    
                                <TextView
                                    android:id="@+id/tvProgressPercentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50% of Goal"
                                    android:textColor="#E0E0E0"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-medium"/>
                             </LinearLayout>
                        </LinearLayout>

                        <!-- Active Members -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Members"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/activeMembers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28/30"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:drawablePadding="6dp"/>
                                
                             <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/bg_capsule_translucent"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Active"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"/>
                             </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- My Take Section (NEW) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="My Take"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <androidx.cardview.widget.CardView
                android:id="@+id/myTakeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/bg_gradient_blue_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scheduled Payout"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp" />
                                
                            <TextView
                                android:id="@+id/tvMyTakePayoutDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Scheduled"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_account_balance_wallet"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#33FFFFFF"
                        android:layout_marginVertical="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Next Contribution Due"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvMyTakeDueDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TBD"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/nav_item_pill_white"
                            android:backgroundTint="#33FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Upcoming"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Month Recipients Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month Recipients"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMonthRecipients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_recipient_small" />
            </LinearLayout>

            <!-- Member Stats Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Pending Payments Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvPendingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/deep_blue"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending Payments"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Payment Streak Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvPaymentStreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FF9800"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Streak"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Credit Score Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvCreditScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300"
                            android:textColor="@color/deep_blue"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Score"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Upcoming Payment Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upcoming payment"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:visibility="gone"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Upcoming Payments RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUpcomingPayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:clipToPadding="false"
                android:layout_marginBottom="24dp"
                tools:listitem="@layout/item_upcoming_payment" />

            <!-- Recent Transactions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Transactions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDateFilter"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#546E7A"
                    app:icon="@drawable/ic_calendar_month"
                    app:iconTint="#546E7A" />
            </LinearLayout>

            <!-- Filters -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="8dp">
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">
                    
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAll"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:checked="true"
                        android:textColor="@color/black" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipContributions"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contributions"
                        android:textColor="@color/black" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLoans"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loans"
                        android:textColor="@color/black" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPayouts"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payouts"
                        android:textColor="@color/black" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- Transaction List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecentTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_transaction" />

            <include
                android:id="@+id/emptyStateLayout"
                layout="@layout/layout_empty_state" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navContainer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/deep_blue"
        app:cardCornerRadius="35dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <!-- Dashboard (Selected) -->
            <LinearLayout
                android:id="@+id/nav_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_pill_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/img_dashboard"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/deep_blue" />

                <TextView
                    android:id="@+id/txt_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Dashboard"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>



            <!-- Pay -->
            <LinearLayout
                android:id="@+id/nav_pay"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_pay"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_payments"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Pay"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Queue -->
            <LinearLayout
                android:id="@+id/nav_queue"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_queue"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_queue"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_queue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Queue"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Loans -->
            <LinearLayout
                android:id="@+id/nav_loans"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_loans"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_loan"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_loans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Loans"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Stats -->
            <LinearLayout
                android:id="@+id/nav_stats"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_stats"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_analytics"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Analysis"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
