<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Avatar Container -->
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp">

        <!-- Outer Ring (Status Indicator) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_white"
            android:backgroundTint="#E8EAF6" />

        <!-- Inner Circle (Image/Initial) -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_white"
            android:backgroundTint="#FFFFFF"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvRecipientInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="A"
                android:textColor="@color/deep_blue"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>
        
        <!-- Optional Verified/Active Badge -->
        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="2dp"
            android:elevation="4dp"
            android:background="@drawable/circle_green_indicator" 
            android:visibility="gone"/>

    </FrameLayout>

    <!-- Name -->
    <TextView
        android:id="@+id/tvRecipientName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="Alice"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
