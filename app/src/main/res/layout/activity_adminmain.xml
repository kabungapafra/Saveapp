<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_geometric_pattern">

    <!-- Main ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:paddingBottom="140dp">

            <!-- Header Section -->

            <!-- Header Section -->
            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back,"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:alpha="0.8"/>

                    <TextView
                        android:id="@+id/adminName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textColor="@color/text_primary"
                        android:textSize="26sp"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="-0.02"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/groupName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_badge_group"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:text="Weekend Savers"
                            android:textColor="#1976D2"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-bold"
                            android:textAllCaps="true"/>

                        <TextView
                            android:id="@+id/tvGroupId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="ID: GRP-001"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:alpha="0.6"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Action Icons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:id="@+id/btnAdminNotifications"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_circle_white"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:focusable="true">
                        
                        <ImageView
                            android:id="@+id/ivAdminNotificationIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_notifications"
                            app:tint="@color/project_primary" />

                        <TextView
                            android:id="@+id/tvAdminNotificationBadge"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/circle_red"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">
                        
                        <ImageView
                            android:id="@+id/profileIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_settings" 
                            app:tint="@color/project_primary"
                            android:background="?attr/selectableItemBackground"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>

            <!-- Balance Cards (Green Card) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/balanceCard"
                style="@style/Widget.App.CardView.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_premium_blue">

                    <!-- Right Background Image Overlay -->
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lng"
                        android:alpha="0.5"
                        android:importantForAccessibility="no" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Top Row: Group Info & Menu -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2 1 4 5  4 5 5 3  6"
                                    android:textColor="#B3FFFFFF"
                                    android:textSize="12sp"
                                    android:letterSpacing="0.2"
                                    android:fontFamily="sans-serif-medium"/>
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/bg_circle_white"
                                    android:backgroundTint="@color/card_premium_icon_bg"
                                    android:padding="3dp"
                                    android:src="@drawable/ic_payments"
                                    app:tint="@color/white" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/balanceMenuIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/ic_more_vert"
                                app:tint="@color/white"
                                android:alpha="0.7"/>
                        </RelativeLayout>

                        <!-- Middle Row: Label & Chart -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Group Balance"
                                    android:textColor="#CCFFFFFF"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"/>
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="8dp"
                                    android:src="@drawable/ic_visibility"
                                    app:tint="#CCFFFFFF" />
                            </LinearLayout>

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/sparklineChart"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:visibility="visible" />
                        </RelativeLayout>

                        <!-- Balance Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_marginBottom="24dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UGX"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-bold"
                                android:layout_marginBottom="6dp"
                                android:layout_marginEnd="6dp"/>

                            <TextView
                                android:id="@+id/currentBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1,500,000"
                                android:textColor="@color/white"
                                android:textSize="36sp"
                                android:fontFamily="sans-serif-black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=".00"
                                android:textColor="#B3FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-bold"
                                android:layout_marginBottom="6dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#22FFFFFF"
                            android:layout_marginBottom="20dp"/>

                        <!-- Footer Stats -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:id="@+id/layoutMySavings"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="My Contribution"
                                    android:textColor="#B3FFFFFF"
                                    android:textSize="11sp"/>
                                <TextView
                                    android:id="@+id/savingsBalance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="UGX 0"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:fontFamily="sans-serif-bold"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/activeMembers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="28 Members"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-bold"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Active Now"
                                    android:textColor="#4CAF50"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Large Action Arrow -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="24dp"
                        android:layout_marginTop="56dp"
                        android:background="@drawable/bg_circle_white"
                        android:backgroundTint="#22FFFFFF"
                        android:padding="14dp"
                        android:src="@drawable/ic_diagonal_arrow"
                        app:tint="@color/white"
                        android:elevation="0dp"
                        android:alpha="0.8"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Quick Actions Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Edit"
                    android:textColor="@color/project_primary"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-bold"
                    android:alpha="0.6"/>
            </RelativeLayout>

            <!-- 3-Column Quick Actions Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="32dp">

                <!-- Add Member -->
                <LinearLayout
                    android:id="@+id/addMemberCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:padding="16dp"
                        android:src="@drawable/ic_person_add"
                        android:background="@drawable/bg_quick_action_circle"
                        android:elevation="2dp"
                        app:tint="#1976D2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Add"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Execute Payout -->
                <LinearLayout
                    android:id="@+id/executePayoutCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:padding="16dp"
                        android:src="@drawable/ic_send_money"
                        android:background="@drawable/bg_quick_action_circle"
                        android:elevation="2dp"
                        app:tint="#D32F2F" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Payout"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- View Loans -->
                <LinearLayout
                    android:id="@+id/viewLoansCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:padding="16dp"
                        android:src="@drawable/ic_loan"
                        android:background="@drawable/bg_quick_action_circle"
                        android:elevation="2dp"
                        app:tint="#F57C00" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Loans"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- My Stash -->
                <LinearLayout
                    android:id="@+id/myPaymentCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:padding="16dp"
                        android:src="@drawable/ic_payments"
                        android:background="@drawable/bg_quick_action_circle"
                        android:elevation="2dp"
                        app:tint="#388E3C" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Stash"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Approvals -->
                <RelativeLayout
                    android:id="@+id/cardPendingApprovals"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="16dp"
                            android:src="@drawable/ic_check_circle"
                            android:background="@drawable/bg_quick_action_circle"
                            android:elevation="2dp"
                            app:tint="#7B1FA2" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Approvals"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvApprovalBadge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_badge_red"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>

                <!-- Analytics -->
                <LinearLayout
                    android:id="@+id/actionAnalytics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:padding="16dp"
                        android:src="@drawable/ic_stats"
                        android:background="@drawable/bg_quick_action_circle"
                        android:elevation="2dp"
                        app:tint="#00BCD4" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Stats"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

            </GridLayout>

            <!-- Premium Payment Schedule Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_premium_blue">

                    <!-- Background Pattern -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/ic_card_wave_pattern"
                        android:scaleType="centerCrop"
                        android:alpha="0.1"
                        app:tint="#FFFFFF"
                        android:layout_alignParentTop="true"/>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="24dp">
                            
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="PAYMENT SCHEDULE"
                                android:textColor="#DDFFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.15"/>

                            <TextView
                                android:id="@+id/btnEditSchedule"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EDIT"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="?attr/selectableItemBackground"
                                android:padding="4dp"/>
                        </LinearLayout>

                        <!-- Data Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            
                            <!-- Contributions -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/bg_capsule_translucent"
                                android:padding="16dp"
                                android:layout_marginEnd="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_payments"
                                    app:tint="#FFFFFF"
                                    android:alpha="0.9"/>
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contributions"
                                    android:textColor="#CCFFFFFF"
                                    android:textSize="11sp"
                                    android:layout_marginTop="12dp"/>
                                
                                <TextView
                                    android:id="@+id/tvContributionDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Set Date"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <!-- Payouts -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/bg_capsule_translucent"
                                android:padding="16dp"
                                android:layout_marginStart="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_send_money"
                                    app:tint="#FFFFFF"
                                    android:alpha="0.9"/>
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Next Payout"
                                    android:textColor="#CCFFFFFF"
                                    android:textSize="11sp"
                                    android:layout_marginTop="12dp"/>
                                
                                <TextView
                                    android:id="@+id/tvPayoutDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Set Date"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Recent Activity Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Activity"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/viewAllActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="View All â†’"
                    android:textColor="@color/project_primary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp" />
            </RelativeLayout>

            <!-- Activity List Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="120dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/activityRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_activity" />

                    <include
                        android:id="@+id/emptyStateLayout"
                        layout="@layout/layout_empty_state" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navContainer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#0D47A1"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Home (Selected) -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="@drawable/nav_item_pill_refined"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/deep_blue" />

                <TextView
                    android:id="@+id/txt_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Home"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- Members -->
            <LinearLayout
                android:id="@+id/nav_members"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_members"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_people"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Members"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Payouts -->
            <LinearLayout
                android:id="@+id/nav_payouts"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_payouts"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_payments"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_payouts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Payouts"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Loans -->
            <LinearLayout
                android:id="@+id/nav_loans"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_loans"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_loan"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_loans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Loans"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Analytics -->
            <LinearLayout
                android:id="@+id/nav_analytics"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_analytics"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_analytics"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_analytics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Analytics"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>