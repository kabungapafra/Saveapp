<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- Main ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:paddingBottom="140dp">

            <!-- Header Section -->

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hello"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/adminName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        style="@style/AppTypography.Black"/>

                    <TextView
                        android:id="@+id/groupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_icon_circle"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="Weekend Savers Club"
                        android:textColor="@color/deep_blue"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvGroupId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: GRP-000000"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/btnAdminNotifications"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_circle_white"
                    android:padding="12dp">
                    
                    <ImageView
                        android:id="@+id/ivAdminNotificationIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/deep_blue" />

                    <TextView
                        android:id="@+id/tvAdminNotificationBadge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/circle_red"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/background_secondary">
                    
                    <ImageView
                        android:id="@+id/profileIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/ic_settings" 
                        app:tint="@color/deep_blue"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Balance Cards (Green Card) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/balanceCard"
                style="@style/Widget.App.CardView.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_gradient_background"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Group Balance"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"
                            android:letterSpacing="0.05"
                            android:fontFamily="sans-serif-medium"/>

                        <ImageView
                            android:id="@+id/balanceMenuIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_more_vert"
                            app:tint="@color/white"
                            android:alpha="0.8"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:id="@+id/currentBalance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="UGX 1,500,000"
                            android:textColor="@color/white"
                            android:textSize="36sp"
                            style="@style/AppTypography.Black" />

                        <!-- Sparkline Chart -->
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/sparklineChart"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#33FFFFFF"
                        android:layout_marginBottom="20dp"/>

                    <!-- Secondary Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- My Savings -->
                        <LinearLayout
                            android:id="@+id/layoutMySavings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="start">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Contribution"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/savingsBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UGX 0"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:lines="1"
                                android:ellipsize="end"/>
                        </LinearLayout>

                        <!-- Members -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Members"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/activeMembers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28/30"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:drawablePadding="6dp"/>
                                
                             <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/bg_capsule_translucent"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Active"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"/>
                             </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Quick Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Quick Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Row 1 -->
                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:weightSum="2">

                    <!-- Add Member Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/addMemberCard"
                        style="@style/Widget.App.CardView.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle"
                                android:backgroundTint="#E3F2FD">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_person_add"
                                    app:tint="#1976D2" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add Member"
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="12dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Execute Payout Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/executePayoutCard"
                        style="@style/Widget.App.CardView.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground">

                             <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle"
                                android:backgroundTint="#FFEBEE">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_send_money"
                                    app:tint="#D32F2F" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payout"
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="12dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- View Loans Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewLoansCard"
                        style="@style/Widget.App.CardView.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle"
                                android:backgroundTint="#FFF3E0">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_loan"
                                    app:tint="#F57C00" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Loans"
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="12dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- My Savings Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/myPaymentCard"
                        style="@style/Widget.App.CardView.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground">

                             <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle"
                                android:backgroundTint="#E8F5E9">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_payments"
                                    app:tint="#388E3C" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="My Stash"
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="12dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">

                    <!-- Pending Approvals Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPendingApprovals"
                        style="@style/Widget.App.CardView.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground">

                             <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle"
                                android:backgroundTint="#F3E5F5">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_check_circle"
                                    app:tint="#7B1FA2" />
                                
                                <TextView
                                    android:id="@+id/tvApprovalBadge"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="top|end"
                                    android:background="@drawable/bg_badge_red"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="9sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Approvals"
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="12dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <!-- Date Picker Section -->
            <androidx.cardview.widget.CardView
                style="@style/Widget.App.CardView.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        style="@style/AppTypography.Black"
                        android:text="PICK A DATE:"
                        android:textColor="@color/deep_blue"
                        android:textSize="14sp"
                        android:letterSpacing="0.05" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Month"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="@color/deep_blue"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_calendar_month"
                        app:iconTint="@color/deep_blue"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:layout_marginEnd="16dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dateRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_calendar_date"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Recent Activity Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Activity"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/viewAllActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:text="View All"
                    android:textColor="#3F51B5"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <!-- Recent Activity Card -->
            <androidx.cardview.widget.CardView
                style="@style/Widget.App.CardView.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Activity List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/activityRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="5"
                        tools:listitem="@layout/item_activity" />

                    <include
                        android:id="@+id/emptyStateLayout"
                        layout="@layout/layout_empty_state" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navContainer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/deep_blue"
        app:cardCornerRadius="35dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <!-- Home (Selected) -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_pill_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/deep_blue" />

                <TextView
                    android:id="@+id/txt_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Home"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- Members -->
            <LinearLayout
                android:id="@+id/nav_members"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_members"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_people"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Members"
                    android:textColor="@color/deep_blue"
